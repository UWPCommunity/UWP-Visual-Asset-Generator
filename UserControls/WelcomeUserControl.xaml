<UserControl
    x:Class="UWP_Visual_Asset_Generator.UserControls.WelcomeUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Visual_Asset_Generator.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:wui="using:Windows.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemControlAcrylicElementBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" x:Name="ColumnOne"/>
            <ColumnDefinition Width="2*" MaxWidth="600" x:Name="ColumnTwo"/>
            <ColumnDefinition Width="*" x:Name="ColumnThree"/>
        </Grid.ColumnDefinitions>



            <StackPanel Grid.Row="1" 
                        x:Name="contentgoeshere" 
                        CornerRadius="4"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
                        BorderThickness="1"
                        Grid.Column="1"
                        BorderBrush="Silver"
                        VerticalAlignment="Center">

                <Grid Padding="8">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <controls:DropShadowPanel BlurRadius="8"
                       Margin="0,0,12,0" Grid.Column="0"
                                          ShadowOpacity="0.7"
                                          OffsetX="2"
                                          OffsetY="2"
                                          Color="Gray">
                        <Image Source="/Images/Logo.png"
                               Width="200"/>
                    </controls:DropShadowPanel>

                    <StackPanel Grid.Column="1" 
                                VerticalAlignment="Center">
                        <TextBlock Text="Welcome to" 
                                   x:Uid="Welcome" 
                                   TextWrapping="WrapWholeWords" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,4" />

                        <TextBlock Text="{x:Bind mainViewModel.Settings.AppName, Mode=OneWay}" 
                                   Style="{ThemeResource SubheaderTextBlockStyle}"
                                   VerticalAlignment="Center" 
                                   TextWrapping="WrapWholeWords" 
                                   HorizontalTextAlignment="Left" />
                    </StackPanel>

                </Grid>

                <StackPanel Visibility="{Binding Settings.ShowWelcomePage, Mode=OneWay}" 
                            Padding="8">

                    <TextBlock Text="Key Features:" 
                               x:Uid="KeyFeatures" 
                               TextWrapping="WrapWholeWords" 
                               FontWeight="Bold" 
                               Margin="0,0,0,8"  />

                    <TextBlock x:Uid="KeyFeature1" 
                               Text="- BETA - App to create store logo (visual assets) for apps." 
                               TextWrapping="WrapWholeWords" />
                    <TextBlock x:Uid="KeyFeature2" 
                               Text="- Currently UWP only." 
                               TextWrapping="WrapWholeWords" />
                                        
                </StackPanel>

                <StackPanel Visibility="{Binding Settings.ShowUpdatePage, Mode=OneWay}" 
                            Padding="8">

                    <TextBlock x:Uid="AppUpdated" 
                               Text="App Updated" 
                               FontWeight="Bold" />
                    <TextBlock Text="{Binding Settings.AppVersion, Mode=OneWay}" 
                               Margin="0,0,0,8"/>
                    
                    <TextBlock x:Uid="SecondBeta" 
                               Text="- Second (closed) beta."  
                               TextWrapping="WrapWholeWords"/>
                    <TextBlock x:Uid="SecondBeta" 
                               Text="- Exporting and updating margins now opertional."  
                               TextWrapping="WrapWholeWords"/>
                    <TextBlock x:Uid="SecondBeta" 
                               Text="- UI updates."  
                               TextWrapping="WrapWholeWords"/>
                    <TextBlock x:Uid="SecondBeta" 
                               Text="- Additional languages supported."  
                               TextWrapping="WrapWholeWords"/>
                    <TextBlock x:Uid="SecondBeta" 
                               Text="- Image assets adjusted to side step VS bug."  
                               TextWrapping="WrapWholeWords"/>
                </StackPanel>

            <wui:HyperlinkButton Content="Privacy Policy" 
                                     NavigateUri="http://www.valleysoftware.com.au/terms-and-conditions-privacy-policy/"
                                     HorizontalAlignment="Center"
                                 Margin="8"/>

            <wui:Button x:Name="btn_Continue" 
                        HorizontalAlignment="Stretch" 
                        BorderThickness="1" 
                        Margin="4,8,4,4" 
                        Style="{ThemeResource ButtonRevealStyle}"
                        Click="Btn_Continue_Click"
                        Content="Continue"
                        Padding="18"
                        HorizontalContentAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold">
                </wui:Button>
            </StackPanel>
        
    </Grid>
</UserControl>
