<UserControl
    x:Class="UWP_Visual_Asset_Generator.UserControls.SidebarUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Visual_Asset_Generator.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="400"
    xmlns:tkcon="using:Microsoft.Toolkit.Uwp.UI.Controls">

    <Grid Background="{ThemeResource SystemControlAccentAcrylicWindowAccentMediumHighBrush}"
          Padding="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel HorizontalAlignment="Stretch">
            
            <TextBlock Text="Original: (Tap or drop)"
                       Margin="4"/>
            
            <tkcon:ImageEx x:Name="image_Original"                         
                           Tapped="Image_Original_Tapped"
                           Source="{x:Bind mainViewModel.OriginalLogoImageSource, Mode=OneWay}"
                           Stretch="Uniform"
                           PlaceholderStretch="Uniform"
                           PlaceholderSource="/Assets/SmallTile.scale-400.png"
                           BorderBrush="Silver"
                           BorderThickness="1.5"
                           AllowDrop="True"
                           Drop="Image_Original_Drop"
                           DragOver="Image_Original_DragOver"
                           />
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>            
            
            <Button Style="{StaticResource RoundedAcrylicWindowRevealButtonStyle}"
                    Content=""
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    Grid.Column="0"
                    Margin="4"
                    Width="60"
                    Height="60"
                    x:Name="btn_OutputFolder"
                    Click="Btn_OutputFolder_Click"/>

            <TextBlock Text="{x:Bind mainViewModel.OutputFolder.Path, Mode=OneWay}"
                       Grid.Column="1"
                       Style="{ThemeResource CaptionTextBlockStyle}"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left"
                       TextAlignment="Left"
                       Margin="4"
                       />

            <Button Style="{StaticResource RoundedAcrylicWindowRevealButtonStyle}"
                    Content=""
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    Grid.Column="2"
                    Margin="4"
                    Width="60"
                    Height="60"
                    x:Name="btn_Save"
                    Click="Btn_Save_Click"/>
        </Grid>

    </Grid>
</UserControl>
