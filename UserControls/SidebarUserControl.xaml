<UserControl
    x:Class="UWP_Visual_Asset_Generator.UserControls.SidebarUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Visual_Asset_Generator.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="400"
    xmlns:tkcon="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:viewmodels="using:UWP_Visual_Asset_Generator.ViewModels">

    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}"
          Padding="12,0,12,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!-- Logo -->
        <StackPanel HorizontalAlignment="Stretch"
                    BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                    BorderThickness="0,0,0,1">
            
            <TextBlock Text="Your logo"
                       Style="{ThemeResource FluentSubheaderTextStyle}"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Margin="0,12,0,0"/>
            
            <!-- Original (Main) Asset -->
            <tkcon:DropShadowPanel Canvas.ZIndex="10"
                                   BlurRadius="10"
                                   ShadowOpacity="0.3"
                                   OffsetX="4"
                                   OffsetY="4"
                                   Color="Black"
                                   Margin="24"
                                   MinHeight="48"
                                   MaxHeight="240"
                                   MinWidth="48"
                                   MaxWidth="240"
                                   HorizontalContentAlignment="Stretch"
                                   HorizontalAlignment="Center">
                <Grid Background="LightGray">
                    <!-- #TODO UI Message (Add image) -->
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="&#xE109;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="72"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Add image"
                                   Style="{ThemeResource FluentTitleTextStyle}"/>
                    </StackPanel>
                    
                    <!-- Main asset-->
                    <tkcon:ImageEx x:Name="image_Original"    
                                   Canvas.ZIndex="60"
                                   Tapped="Image_Original_Tapped"
                                   Source="{x:Bind mainViewModel.OriginalLogoImageSource, Mode=OneWay}"
                                   Stretch="Uniform"
                                   AllowDrop="True"
                                   PlaceholderStretch="Uniform"
                                   PlaceholderSource="/Assets/SmallTile.scale-400.png"
                                   Drop="Image_Original_Drop"
                                   DragOver="Image_Original_DragOver"
                                   ToolTipService.ToolTip="Drop a PNG image here, or click to browse" />
                </Grid>
            </tkcon:DropShadowPanel>
        </StackPanel>
        <!-- End of logo -->
        
        <!-- Asset Style List -->
        <ListView ItemsSource="{x:Bind mainViewModel.AssetTypes.Items, Mode=OneWay}"
                  SelectedItem="{x:Bind mainViewModel.AssetTypes.Current, Mode=TwoWay}"
                  IsMultiSelectCheckBoxEnabled="false"   
                  SelectionMode="Single"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch" 
                  Grid.Row="1">

            <ListView.ItemContainerTransitions>
                <TransitionCollection>
                    <AddDeleteThemeTransition/>
                </TransitionCollection>
            </ListView.ItemContainerTransitions>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                    <Setter Property="Padding" Value="4"></Setter>
                    <Setter Property="Margin" Value="4"></Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:AssetTypeViewModel" >
                    <Grid BorderBrush="Gray">
                        <TextBlock Text="{x:Bind Title, Mode=OneWay}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- End of Asset Style list -->
        
        
        <!-- Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>            
            
            <Button Style="{StaticResource RoundedAcrylicWindowRevealButtonStyle}"
                    Content=""
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    Grid.Column="0"
                    Margin="4"
                    Width="60"
                    Height="60"
                    x:Name="btn_OutputFolder"
                    Click="Btn_OutputFolder_Click"/>

            <TextBlock Text="{x:Bind mainViewModel.OutputFolder.Path, Mode=OneWay}"
                       Grid.Column="1"
                       Style="{ThemeResource CaptionTextBlockStyle}"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left"
                       TextAlignment="Left"
                       Margin="4"
                      ToolTipService.ToolTip="Set the output folder"
                       />

            <Button Style="{StaticResource RoundedAcrylicWindowRevealButtonStyle}"
                    Content=""
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24"
                    Grid.Column="2"
                    Margin="4"
                    Width="60"
                    Height="60"
                    x:Name="btn_Save"
                    Click="Btn_Save_Click"
                    ToolTipService.ToolTip="Save all assets to the output folder"
                    IsEnabled="{x:Bind mainViewModel.SaveEnabled, Mode=OneWay}"/>
        </Grid>
        <!-- End of Buttons -->
        
    </Grid>
</UserControl>
